@model TicketBook.DataAccessLayer.DomainModel.Flight

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AirplaneId" class="control-label"></label>
                <select asp-for="AirplaneId" class ="form-control" asp-items="ViewBag.AirplaneId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArrivalCityId" class="control-label"></label>
                <select asp-for="ArrivalCityId" class ="form-control" asp-items="ViewBag.ArrivalCityId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DepartureCityId" class="control-label"></label>
                <select asp-for="DepartureCityId" class ="form-control" asp-items="ViewBag.DepartureCityId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArivalTime" class="control-label"></label>
                <input asp-for="ArivalTime" class="form-control" />
                <span asp-validation-for="ArivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvaliableTicket" class="control-label"></label>
                <input asp-for="AvaliableTicket" class="form-control" />
                <span asp-validation-for="AvaliableTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

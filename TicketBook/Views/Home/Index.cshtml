@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <div class="my-flex-container" style="
        padding-top:20px;">



        <div class="row">
            <div class="my-flex-block">
                <div class="col-md-4">
                    <select class="form-control shadow" name="departureCityId" title="City">
                        <option value="-1">Select departure city</option>
                        @foreach (var city in Model)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <select class="form-control shadow" name="arrivalCityId" title="City">
                        <option value="-1">Select arrival city</option>
                        @foreach (var city in Model)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <input id="date" name="departureDate" type="Date" class="form-control">
                </div>
            </div>

        </div>
        <div class="my-flex-block" style="
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
        padding-top:20px;
          ">

            <button type="submit" class="btn btn-lg btn-success">
                Search
            </button>
        </div>

    </div>
}



